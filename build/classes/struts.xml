<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 包结构 -->
	<!-- <package name="demo1" namespace="/" extends="struts-default"> 配置Action 
		<action name="hello" class="com.ithup.action.HelloAction" method="sayHello"> 
		<result name="ok">/demo/success.jsp</result> </action> </package> -->
	<package name="crm" namespace="/" extends="struts-default">
		<!-- 定义拦截器 -->
		<interceptors>
			<interceptor name="loginInter"
				class="com.ithup.interceptor.LoginInterceptor" />
			<interceptor-stack name="myInterceptor">
				<interceptor-ref name="loginInter" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		<!-- 配置用户的模块 -->
		<action name="user_*" class="com.ithup.action.UserAction"
			method="{1}">
			<interceptor-ref name="myInterceptor" />
			<result name="success">/index.jsp</result>
			<result name="login">/login.jsp</result>
		</action>
		<!-- 客户的模块 -->
		<action name="customer_*" class="com.ithup.action.CustomerAction"
			method="{1}">
			<interceptor-ref name="myInterceptor" />
			<result name="customerList">/jsp/customer/list.jsp</result>
			<result type="redirectAction" name="custList">
				customer_findAll
			</result>
			<!-- 重新发起一次查询： 使用重定向 -->
		</action>
	</package>
